<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Preference Theme -->
    <style name="PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <!-- left empty if need for later configuration -->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Label">
        <item name="android:paddingTop">@dimen/configure_label_padding_top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/general_text_size</item>
    </style>

    <style name="Label.Blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SpinnerLabel">
        <!--<item name="android:paddingLeft">@dimen/configure_label_padding_start</item>-->
        <!--<item name="android:paddingTop">@dimen/configure_label_padding_top</item>-->
        <!--<item name="android:textColor">@color/gray</item>-->
        <!--<item name="android:textSize">@dimen/general_textsize</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:colorBackground">@android:color/holo_red_dark</item>
    </style>


</resources>
